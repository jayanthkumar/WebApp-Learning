<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <module-name>BookApplication</module-name>
    
    <servlet>
     	<servlet-name>BookApplication</servlet-name>
    	 <servlet-class>
         	org.glassfish.jersey.servlet.ServletContainer
     	</servlet-class>

		<!-- Register JAX-RS Application, if needed. -->
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>com.jsomiset.TestApplication</param-value>
        </init-param>
 
        <!-- Register resources and providers under my.package.-->
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com.jsomiset.providersImpl</param-value>
        </init-param> 
 
        <!-- Register my custom provider (not needed if it's in my.package) AND LoggingFilter. 
        <init-param>
            <param-name>jersey.config.server.provider.classnames</param-name>
            <param-value>my.package.SecurityRequestFilter;org.glassfish.jersey.filter.LoggingFilter</param-value>
        </init-param>-->
 
        <!-- Enable Tracing support. -->
        <!-- <init-param>
            <param-name>jersey.config.server.tracing</param-name>
            <param-value>ALL</param-value>
        </init-param> -->
 
        <load-on-startup>1</load-on-startup>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>BookApplication</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
</web-app>